package zoho16_2;

public class Main {

	public static void main(String[] args) {
		Fighter f = new Fighter("戦士","山田",100);
		Monster m = new Monster(50);

		System.out.println("モンスター現れた");


		Exit:
		while(m.hp>0) { //正の間は攻撃
			System.out.print
			(f.job+f.name+"はどうする？[1:戦う][0:逃げる]>>");

			int select = new java.util.Scanner(System.in).nextInt();

			switch(select) {
			case 1:
				f.attack(m);
				if(m.hp<=0) {
					break Exit;
				}
			case 0:
				f.run();
				break Exit;

			}

		}
	}

}
